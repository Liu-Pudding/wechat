<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 minutes">

    <!--<property name="LOG_HOME" value="/Users/liuyuhao/data/logs/wechat"/>-->
    <property name="LOG_HOME" value="logs/wechat"/>

    <appender name="stdot" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%p][%c][%M][%L]-> %m%n</pattern>
        </layout>
    </appender>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/log.%d{yyyy-MM-dd}-%i.log</FileNamePattern>          „ÄÅ
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>10MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <charset>utf-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%p][%c][%M][%L]-> %m%n</pattern>
        </encoder>
        <append>false</append>
        <prudent>false</prudent>
    </appender>

    <logger name="cn.ibionic.wechat.*" additivity="false"  level="INFO">
        <appender-ref ref="stdot" />
    </logger>

    <logger name="org.mybatis.spring" additivity="false"  level="ERROR">
        <appender-ref ref="stdot" />
    </logger>

    <root level="info">
        <appender-ref ref="stdot" />
        <appender-ref ref="file" />
    </root>

</configuration>